<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:windowSoftInputMode="stateHidden"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/search_top_background"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:background="@drawable/search_edit_shape"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/search_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="搜索你想要的壁纸"
                android:paddingLeft="25dp"
                android:layout_weight="1"
                android:background="@color/transparent"/>
            <ImageView
                android:id="@+id/search_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/search_ico"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
    </RelativeLayout>

    <wp.a360.point.com.myapplication.ui.view.FlowLayout
        xmlns:flowlayout="http://schemas.android.com/apk/res-auto"
        android:id="@+id/flow_layout"
        flowlayout:vertical_spacing="6dp"
        flowlayout:horizontal_spacing="20dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content" />










</LinearLayout>
