<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wp.point.qj.jb">

    <!--联网权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 添加访问手机状态的权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 添加访问手机位置的权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!--sdcard读写权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!--设置壁纸所需要的权限-->
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>

    <!--百度统计所需权限-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="wp.a360.point.com.myapplication.ui.activity.MyAppLication"
        android:theme="@style/AppTheme">
        <activity android:name="wp.a360.point.com.myapplication.ui.activity.GuideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
        android:name="BaiduMobAd_STAT_ID"
        android:value="ab70c40c5c"/>  

        <meta-data
        android:name="BaiduMobAd_CHANNEL"
        android:value="huawei" />

        <meta-data
        android:name="BaiduMobAd_EXCEPTION_LOG"
        android:value="true" />

        <!--主页面-->
        <activity android:name="wp.a360.point.com.myapplication.ui.activity.MainActivity"
            android:screenOrientation="portrait" />
        <!--图片预览界面-->
        <activity android:name="wp.a360.point.com.myapplication.ui.activity.WallPaperDetailsActivity"
            android:screenOrientation="portrait" />
        <!--类型结果界面-->
        <activity android:name="wp.a360.point.com.myapplication.ui.activity.ImageTypeDetailsActivity"
            android:screenOrientation="portrait" />
        <!--搜索结果界面-->
        <activity android:name="wp.a360.point.com.myapplication.ui.activity.SearchResultActivity"
            android:screenOrientation="portrait" />
        <!--我的收藏下载界面-->
        <activity android:name="wp.a360.point.com.myapplication.ui.activity.MyWallpaperActivity"
            android:screenOrientation="portrait" />





    </application>

</manifest>